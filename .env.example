# TaggingApp Environment Configuration
# Copy this file to .env and modify the values as needed

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Security (IMPORTANT: Change this in production!)
SECRET_KEY=please-change-this-to-a-secure-random-string

# Application Directories
STATES_DIR=states
LOGS_DIR=logs
USER_CONFIG_DIR=user-config

# Logging Configuration
LOG_LEVEL=INFO
MAX_LOG_FILE_SIZE=10MB
LOG_RETENTION_DAYS=30

# Performance Settings
MAX_CONTENT_LENGTH=16MB
PERMANENT_SESSION_LIFETIME=86400

# Feature Flags
ENABLE_DEBUG_LOGGING=False
ENABLE_IMPORT_LOGGING=True
ENABLE_FRONTEND_LOGGING=True
